[flake8]
max-line-length = 100
extend-ignore = E203
exclude = .git,__pycache__,.pytest_cache,build,dist
per-file-ignores =
    # Ignore import-related errors in test files
    tests/*:F401,E402

[tool.ruff]
line-length = 100
target-version = "py313"
select = ["E", "F", "I"]
ignore = []

per-file-ignores = {}
exclude = [
    ".git",
    ".ruff_cache",
    "__pycache__",
    ".pytest_cache",
    "build",
    "dist"
]
